import random
# library that we use in order to choose
# on random states from a list of states

name = input("Hello! What is your name? ")
# Here the user is asked to enter the name first

print(str(name) + ", do you know all 50 States in the U.S.?")
print("Try to guess the State that I am thinking of.")

state = ['ALABAMA', 'ALASKA', 'ARIZONA', 'ARKANSAS', 'CALIFORNIA', 'COLORADO', 'CONNECTICUT', 'DELAWARE', 'FLORIDA', 'GEORGIA', 'HAWAII', 'IDAHO', 'ILLINOIS', 'INDIANA', 'IOWA', 'KANSAS', 'KENTUCKY', 'LOUISIANA', 'MAINE', 'MARYLAND', 'MASSACHUSETTS', 'MICHIGAN', 'MINNESOTA', 'MISSISSIPPI', 'MISSOURI', 'MONTANA', 'NEBRASKA', 'NEW HAMPSHIRE', 'NEW JERSEY', 'NEW MEXICO', 'NEW YORK', 'NORTH CAROLINA', 'NORTH DAKOTA', 'OHIO', 'OKLAHOMA', 'OREGON', 'PENNSYLVANIA', 'RHODE ISLAND', 'SOUTH CAROLINA', 'SOUTH DAKOTA', 'TENNESSEE', 'TEXAS', 'UTAH', 'VERMONT', 'VIRGINIA', 'WASHINGTON', 'WEST VIRGINIA', 'WISCONSIN', 'WYOMING']

# Function will choose one random
# state from this list of states

the_state = random.choice(state)
print("The State is of " + str({len(the_state)}) + " letters. ")

print("Guess the letters of the State: ")

guesses = input("Take a guess:").upper()

# any number of turns can be used here
turns = 12

while turns > 0:

    # counts the number of times a user fails
    failed = 0

    # all letters from the input
    # word taking one at a time.

    for char in the_state:

        # comparing the character with
        # the character in guesses
        if char in guesses:
            print(" ", char, " ", end="")

        else:
            print(" _ ", end="")

            # for every failure 1 will be
            # incremented in failure
            failed += 1

    if failed == 0:
        # user will win the game if failure is 0
        # and "Great job name!" will be given as output
        print("\n")
        print("Good job " + str(name) + "!")

        # this prints the correct state
        print("The State I was thinking of is:", the_state)
        break

    # if user has input the wrong letter
    # it will ask user to enter another letter
    print("\n")
    guess = input("Take a guess:").upper()

    # every input letter will be stored in guesses
    guesses += guess

    # check input with the letter in state
    if guess not in the_state:

        turns -= 1

        # if the letter doesn't match the state
        # then "That's not it. Please guess again."
        # will be given as output
        print("That's not it. Please guess again.")

        # this will print the number of
        # turns left for the user
        print("You have", + turns, "more guesses")

        if turns == 0:
            print("Sorry! You have no more turns to make a guess.")
            print("The State I was thinking of was:", the_state)

            
        
